<project name="module_nwt_hs" default="compile.module.nwt_hs">
  <dirname property="module.nwt_hs.basedir" file="${ant.file.module_nwt_hs}"/>
  
  <property name="module.jdk.home.nwt_hs" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.nwt_hs" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.nwt_hs" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.nwt_hs" value="${compiler.args}"/>
  
  <property name="nwt_hs.output.dir" value="${module.nwt_hs.basedir}/../../../out/production/nwt_hs"/>
  <property name="nwt_hs.testoutput.dir" value="${module.nwt_hs.basedir}/../../../out/test/nwt_hs"/>
  
  <path id="nwt_hs.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="nwt_hs.module.production.classpath">
    <path refid="${module.jdk.classpath.nwt_hs}"/>
    <path refid="library.bugsense3.4.classpath"/>
  </path>
  
  <path id="nwt_hs.runtime.production.module.classpath">
    <pathelement location="${nwt_hs.output.dir}"/>
    <path refid="library.bugsense3.4.classpath"/>
  </path>
  
  <path id="nwt_hs.module.classpath">
    <path refid="${module.jdk.classpath.nwt_hs}"/>
    <pathelement location="${nwt_hs.output.dir}"/>
    <path refid="library.bugsense3.4.classpath"/>
  </path>
  
  <path id="nwt_hs.runtime.module.classpath">
    <pathelement location="${nwt_hs.testoutput.dir}"/>
    <pathelement location="${nwt_hs.output.dir}"/>
    <path refid="library.bugsense3.4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.nwt_hs">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.nwt_hs">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.nwt_hs"/>
  </patternset>
  
  <path id="nwt_hs.module.sourcepath">
    <dirset dir="${module.nwt_hs.basedir}">
      <include name="gen"/>
      <include name="java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.nwt_hs" depends="compile.module.nwt_hs.production,compile.module.nwt_hs.tests" description="Compile module nwt_hs"/>
  
  <target name="compile.module.nwt_hs.production" depends="register.custom.compilers" description="Compile module nwt_hs; production classes">
    <mkdir dir="${nwt_hs.output.dir}"/>
    <javac2 destdir="${nwt_hs.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.nwt_hs}/javac">
      <compilerarg line="${compiler.args.nwt_hs}"/>
      <bootclasspath refid="nwt_hs.module.bootclasspath"/>
      <classpath refid="nwt_hs.module.production.classpath"/>
      <src refid="nwt_hs.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.nwt_hs"/>
    </javac2>
    
    <copy todir="${nwt_hs.output.dir}">
      <fileset dir="${module.nwt_hs.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.nwt_hs"/>
      </fileset>
      <fileset dir="${module.nwt_hs.basedir}/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.nwt_hs"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.nwt_hs.tests" depends="register.custom.compilers,compile.module.nwt_hs.production" description="compile module nwt_hs; test classes" unless="skip.tests"/>
  
  <target name="clean.module.nwt_hs" description="cleanup module">
    <delete dir="${nwt_hs.output.dir}"/>
    <delete dir="${nwt_hs.testoutput.dir}"/>
  </target>
</project>